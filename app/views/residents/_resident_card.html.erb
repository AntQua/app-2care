<div class="card-resident">
  <div class="flex-card d-flex">
    <% #if resident.photo.attached? %>
    <% if resident.photography.present? %>
      <%#= cl_image_tag resident.photo.key, crop: :fill %>
      <%= image_tag resident.photography %>
    <% else %>
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png", crop: :fill %>
    <% end %>

    <div class="card-resident-infos">
      <div>
        <h2><%= resident.first_name.capitalize %></h2>
        <p><%= resident.clinical_info.capitalize %></p>
      </div>
    </div>
  </div>

  <%# DO NOT delete this button, it is repeated on purpose because if we delete it the other one won't appear %>
  <%= link_to dashboard_path do %>
    <div class="card-resident-icon d-none">
      <i class="fa-solid fa-file-pen"></i>
    </div>
  <% end %>

  <%= simple_form_for [resident, Report.new] do |f| %>
    <%= button_tag type: 'submit', class: "card-resident-icon" do %>
      <i class="fa-solid fa-file-pen"></i>
    <% end %>
<% end %>
</div>
