<div class= "d-flex justify-content-between align-items-baseline">
  <h1 class="page-title">Residents</h1>
  <div class="page-title">
    <button data-toggle-items-target="searchIcon"><i class="fa-solid fa-magnifying-glass d-none" data-action="click->toggle-items#displaySearch"></i></button>
    <button><i class="fa-solid fa-plus d-none"></i></button>
  </div>
</div>

<div class="search_residents my-4">
  <%= form_with url: search_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Type the name of a resident"
      %>
    <%= submit_tag "Search", name: "", class: "button-primary-2care" %>
  <% end %>
</div>

  <div class="row">
    <% @residents.each do |resident| %>
        <%= link_to resident_path(resident) do %>
          <div class="col mb-3">
            <%= render "residents/resident_card", resident: resident %>
          </div>
      <% end %>
    <% end %>
  </div>
